@{
}
@model UserViewModel


@{
    ViewData["Title"] = "User List";
}



<div class="container mt-4">
    <div class="card shadow-lg">
        <div class="card-header text-white" style="background-color:  #002a5c">
            <h3 class="mb-0">User List</h3>
        </div>
        <div class="card-body">
            @if (Model.Users.Any())
            {
                <table class="table text-center" style="border: 2px solid  #002a5c;">
                    <thead style="background-color:  #002a5c color: yellow;">
                        <tr>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Email</th>
                            <th>Reservation Number</th> 
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model.Users)
                        {
                            <tr style="border-bottom: 1px solid  #002a5c">
                                <td>@user.emer</td>
                                <td>@user.mbiemer</td>
                                <td>@user.email</td>
								<td>@user.nrRezervimesh</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert text-center" style="background-color:  #e0b63d; color: #002a5c; font-weight: bold;">
                    No users found in the database.
                </div>
            }
        </div>
    </div>
</div>
