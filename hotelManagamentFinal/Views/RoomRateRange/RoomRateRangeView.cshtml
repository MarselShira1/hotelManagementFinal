@using HotelManagement.Models
@model RoomRateRangesViewModel
<div class="text-center">
    <h1 class="display-4">Room Rate Ranges </h1>
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addRoomRateRangeModal">+</button>
    <p>Customize your prices! </p>
</div>

<div class="modal fade" id="addRoomRateRangeModal" tabindex="-1" aria-labelledby="addRoomRateRangeLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add Price Range</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form method="post" asp-action="CreateRoomRateRange" asp-controller="RoomRateRange">
                    @Html.AntiForgeryToken()
                    <div class="mb-3">
                        <label asp-for="NewRoomRateRange.RoomRateId" class="form-label">Choose room rate</label>
                        <select asp-for="NewRoomRateRange.RoomRateId" class="form-select" required>
                            <option value="">Select Room Type</option>
                            @foreach (var roomRate in Model.roomRates)
                            {
                                <option value="@roomRate.Id">
                                    @(roomRate.TipDhome != null ? $"{roomRate.TipDhome.Emer} - {roomRate.Emer}" : roomRate.Emer)
                                </option>
                            }
                        </select>
                        <span asp-validation-for="NewRoomRateRange.RoomRateId" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="NewRoomRateRange.StartDate" class="form-label">Choose start date: </label>
                        <input asp-for="NewRoomRateRange.StartDate" class="form-control" type="date" />
                        <span asp-validation-for="NewRoomRateRange.StartDate" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="NewRoomRateRange.EndDate" class="form-label">Choose end date: </label>
                        <input asp-for="NewRoomRateRange.EndDate" class="form-control" type="date"  />
                        <span asp-validation-for="NewRoomRateRange.EndDate" class="text-danger" ></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="NewRoomRateRange.WeekendPricing" class="form-label">Choose weekend factor</label>
                        <input asp-for="NewRoomRateRange.WeekendPricing" class="form-control" type="number" min="0" />
                        <span asp-validation-for="NewRoomRateRange.WeekendPricing" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="NewRoomRateRange.HolidayPricing" class="form-label">Choose holiday factor</label>
                        <input asp-for="NewRoomRateRange.HolidayPricing" class="form-control" type="number" min="0"/>
                        <span asp-validation-for="NewRoomRateRange.HolidayPricing" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="NewRoomRateRange.Description" class="form-label">Add Description: </label>
                        <textarea asp-for="NewRoomRateRange.Description" class="form-control"></textarea>
                        <span asp-validation-for="NewRoomRateRange.Description" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="editRoomRateRangeModal" tabindex="-1" aria-labelledby="editRoomRateRangeLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit Price Range</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form method="post" asp-action="EditRoomRateRange" asp-controller="RoomRateRange">
                    <input type="hidden" asp-for="EditRoomRateRange.Id" name="EditRoomRateRange.Id" />
                    @Html.AntiForgeryToken()
                    <div class="mb-3">
                        <label asp-for="EditRoomRateRange.RoomRateId" class="form-label">Edit room rate</label>
                        <select asp-for="EditRoomRateRange.RoomRateId" class="form-select" required>
                            <option value="">Select Room Type</option>
                            @foreach (var roomRate in Model.roomRates)
                            {
                                <option value="@roomRate.Id">
                                    @(roomRate.TipDhome != null ? $"{roomRate.TipDhome.Emer} - {roomRate.Emer}" : roomRate.Emer)
                                </option>
                            }
                        </select>
                        <span asp-validation-for="EditRoomRateRange.RoomRateId" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="EditRoomRateRange.StartDate" class="form-label">Choose start date: </label>
                        <input asp-for="EditRoomRateRange.StartDate" class="form-control" type="date" />
                        <span asp-validation-for="EditRoomRateRange.StartDate" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="EditRoomRateRange.EndDate" class="form-label">Choose end date: </label>
                        <input asp-for="EditRoomRateRange.EndDate" class="form-control" type="date" />
                        <span asp-validation-for="EditRoomRateRange.EndDate" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="EditRoomRateRange.WeekendPricing" class="form-label">Choose weekend factor</label>
                        <input asp-for="EditRoomRateRange.WeekendPricing" class="form-control" type="number" min="0" />
                        <span asp-validation-for="EditRoomRateRange.WeekendPricing" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="EditRoomRateRange.HolidayPricing" class="form-label">Choose holiday factor</label>
                        <input asp-for="EditRoomRateRange.HolidayPricing" class="form-control" type="number" min="0" />
                        <span asp-validation-for="EditRoomRateRange.HolidayPricing" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="EditRoomRateRange.Description" class="form-label">Add Description: </label>
                        <textarea asp-for="EditRoomRateRange.Description" class="form-control"></textarea>
                        <span asp-validation-for="EditRoomRateRange.Description" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary">Save changes</button>
                </form>
            </div>
        </div>
    </div>
</div>


<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Room Rate</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Weekend Price Factor</th>
            <th>Holiday Price Factor</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var roomRateRange in Model.RoomRateRanges)
        {
            <tr>
                <td>@roomRateRange.Id</td>
                <td>@($" {roomRateRange.RoomRate?.Name ?? "N/A"}")</td>
                <td>@roomRateRange.StartDate</td>
                <td>@roomRateRange.EndDate</td>
                <td>@roomRateRange.WeekendPricing</td>
                <td>@roomRateRange.HolidayPricing</td>
                <td>@roomRateRange.Description</td>
                <td>
                    <button type="button" class="btn btn-warning btn-sm" data-bs-toggle="modal"
                            data-bs-target="#editRoomRateRangeModal"
                            onclick="populateEditModal({
                                    id: '@roomRateRange.Id',
                                    RateId: '@(roomRateRange.RoomRate?.Id ?? 0)',
                                    roomTypeName: "",
                                    StartDate: '@roomRateRange.StartDate',
                                    EndDate: '@roomRateRange.EndDate',
                                    Weekend: '@roomRateRange.WeekendPricing',
                                    Holiday: '@roomRateRange.HolidayPricing',
                                    Description: '@roomRateRange.Description'
                                })">
                        <i class="fas fa-edit"></i> Edit
                    </button>

                    <form method="post" asp-action="DeleteRoomRateRange" asp-controller="RoomRateRange"
                          style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this room Rate Range?');">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@roomRateRange.Id" />
                        <button type="submit" class="btn btn-danger btn-sm">
                            <i class="fas fa-trash"></i> Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<script>
    function populateEditModal(roomRateRange) {
        console.log("Room Rate Range:", roomRateRange);

        $('#EditRoomRateRangeModal input[name="EditRoomRateRange.Id"]').val('');
        $('#EditRoomRateRangeModal input[name="EditRoomRateRange.StartDate"]').val('');
        $('#EditRoomRateRangeModal input[name="EditRoomRateRange.EndDate"]').val('');
        $('#EditRoomRateRangeModal input[name="EditRoomRateRange.WeekendPricing"]').val('');
        $('#EditRoomRateRangeModal input[name="EditRoomRateRange.HolidayPricing"]').val('');
        $('#EditRoomRateRangeModal textarea[name="EditRoomRateRange.Description"]').val('');

        
        $('#EditRoomRateRangeModal input[name="EditRoomRateRange.Id"]').val(roomRateRange.id);
        $('#EditRoomRateRangeModal input[name="EditRoomRateRange.StartDate"]').val(roomRateRange.StartDate);
        $('#EditRoomRateRangeModal input[name="EditRoomRateRange.EndDate"]').val(roomRateRange.EndDate);
        $('#EditRoomRateRangeModal input[name="EditRoomRateRange.WeekendPricing"]').val(roomRateRange.Weekend);
        $('#EditRoomRateRangeModal input[name="EditRoomRateRange.HolidayPricing"]').val(roomRateRange.Holiday);
        $('#EditRoomRateRangeModal textarea[name="EditRoomRateRange.Description"]').val(roomRateRange.Description);


        $('#EditRoomRateRangeModal select[name="EditRoomRateRange.RoomRateId"]').val(roomRateRange.RateId);

 
        if (!$('#EditRoomRateRangeModal select[name="EditRoomRateRange.RoomRateId"]').val()) {
            $('#EditRoomRateRangeModal select[name="EditRoomRateRange.RoomRateId"]').val('');
        }
    }
</script> *@