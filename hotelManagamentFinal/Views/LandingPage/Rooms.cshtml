        },
        body: JSON.stringify(billDto) // Pass DTO as the request body
    })
    .then(response => response.json())
    .then(data => {
        const pdfFrame = document.getElementById("pdfPreview");
        pdfFrame.src = "data:application/pdf;base64," + data.pdfData;
