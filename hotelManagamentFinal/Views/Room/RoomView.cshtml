@model HotelManagement.Models.RoomViewModel
    
<div class="text-center">
    <h1 class="display-4">Rooms</h1>
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addRoomModal">+</button>
</div>

<div class="modal fade" id="addRoomModal" tabindex="-1" aria-labelledby="addRoomLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add Room</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="roomForm">
                    @Html.AntiForgeryToken()
                    <div class="mb-3">
                        <label for="NewRoom_RoomTypeId" class="form-label">Choose room type</label>
                        <select id="NewRoom_RoomTypeId" class="form-select" required>
                            <option value="">Select Room Type</option>
                            @foreach (var roomType in Model.RoomTypes)
                            {
                                <option value="@roomType.Id">@roomType.Emer</option>
                            }
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="NewRoom_room_floor" class="form-label">Room Floor:</label>
                        <input id="NewRoom_room_floor" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label for="NewRoom_room_number" class="form-label">Room Number:</label>
                        <input id="NewRoom_room_number" class="form-control" />
                    </div>
                    <button type="submit" id="submitButton" class="btn btn-primary">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>


<br />

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Type</th>
            <th>Floor</th>
            <th>Room Number</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var room in Model.Room)
        {
            <tr>
                <td>@room.Id</td>
                <td>@(room.RoomType?.Emer ?? "N/A")</td>
                <td>@room.room_number</td>
                <td>@room.room_floor</td>
                <td>
                    <button type="button" class="btn btn-warning btn-sm" data-bs-toggle="modal"
                            data-bs-target="#editRoomModal"
                            onclick="populateEditModal({
                                    id: '@room.Id',
                                    roomTypeId: '@(room.RoomType?.Id ?? 0)',
                                    roomTypeName: '@(room.RoomType?.Emer ?? "")',
                                    roomNumber: '@room.room_number',
                                    roomFloor: '@room.room_floor'
                                })">
                        <i class="fas fa-edit"></i> Edit
                    </button>

                    <form method="post" asp-action="DeleteRoom" asp-controller="Room"
                          style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this room?');">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@room.Id" />
                        <button type="submit" class="btn btn-danger btn-sm">
                            <i class="fas fa-trash"></i> Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<script>
        function populateEditModal(room) {
        console.log("Room:", room);

        document.getElementById('editRoomId').value = room.id;
        document.getElementById('editRoomType').value = room.roomTypeId;
        document.getElementById('editRoomTypeName').textContent = room.roomTypeName;
        document.getElementById('editRoomNumber').value = room.roomNumber;
        document.getElementById('editRoomFloor').value = room.roomFloor;
    }

</script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>


            function loadRoomData() {
                $.ajax({
                    type: "GET",
                    url: '@Url.Action("GetRoomList", "Room")', // Controller action URL
                    success: function (rooms) {
                        var tbody = $("table tbody");
                        tbody.empty(); // Clear the table body before appending new rows

                        rooms.forEach(function (room) {
                            debugger
                            var row = `
                                <tr>
                                    <td>${room.id}</td>
                                            <td>${room.tipDhome ? room.tipDhome: "N/A"}</td>
                                        <td>${room.kat}</td>
                                        <td>${room.numerDhome}</td>
                                    <td>
                                        <button type="button" class="btn btn-warning btn-sm" data-bs-toggle="modal"
                                                data-bs-target="#editRoomModal"
                                                onclick="populateEditModal({
                                                    id: '${room.id}',
                                                    roomTypeId: '${room.roomType ? room.roomType.id : 0}',
                                                        roomTypeName: '${room.tipDhome ? room.tipDhome : ""}',
                                                    roomNumber: '${room.numerDhome}',
                                                    roomFloor: '${room.kat}'
                                                })">
                                            <i class="fas fa-edit"></i> Edit
                                        </button>

                                        <form method="post" asp-action="DeleteRoom" asp-controller="Room"
                                              style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this room?');">
                                            <input type="hidden" name="id" value="${room.id}" />
                                            <button type="submit" class="btn btn-danger btn-sm">
                                                <i class="fas fa-trash"></i> Delete
                                            </button>
                                        </form>
                                    </td>
                                </tr>`;
                            tbody.append(row);
                        });
                    },
                    error: function () {
                        alert('Failed to load room data.');
                    }
                });
            }

    $(document).ready(function () {
             loadRoomData();


        $('#submitButton').click(function (event) {
            event.preventDefault();
debugger;
            var roomTypeId = $('#NewRoom_RoomTypeId').val();
            var roomFloor = $('#NewRoom_room_floor').val();
            var roomNumber = $('#NewRoom_room_number').val();
            //un e kam bo shtimin me ajax po mund e me epershtat si kjo do i them chatit se sdi vete lot
            $.ajax({
                type: "POST",
                    url: '@Url.Action("CreateRoomSql", "Room")',
                data: {
                    RoomTypeId: roomTypeId,
                    RoomFloor: roomFloor,
                    RoomNumber: roomNumber
                },
                success: function (response) {
                    if (response.success) {
                        alert('Room created successfully.');
                        // Optional: reload the page or update the UI
                    } else {
                        alert('Failed to create room: ' + response.errors.join(', '));
                    }
                },
                error: function () {
                    alert('An error occurred.');
                }
            });
        });
    });
</script>

