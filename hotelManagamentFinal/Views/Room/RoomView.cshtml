        $(document).on('click', '.delete-button', function () {
        const roomId = $(this).data('room-id'); // Get room ID from data attribute

        // Open confirmation modal
        if (confirm('Are you sure you want to delete this room?')) {
            // If user confirms, make an AJAX call to delete the room
            $.ajax({
                type: 'POST',
                url: '/Room/DeleteRoom', // Adjust the controller/action URL if needed
                data: { id: roomId },
                success: function (response) {
                    if (response.success) {
                        alert('Room deleted successfully.');
                        // Optionally, refresh the table or remove the row dynamically
                        $(`button[data-room-id="${roomId}"]`).closest('tr').remove();
                    } else {
                        alert('Failed to delete room: ' + response.message);
                    }
                },
                error: function () {
                    alert('An error occurred while trying to delete the room.');
                }
            });
        }
    });


