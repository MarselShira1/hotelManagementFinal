@{
    ViewData["Title"] = "Room Types";
}

@model HotelManagement.Models.RoomTypeViewModel

<div class="text-center">
    <h1 class="display-4">Room Types</h1>
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addRoomTypeModal">
        + Add Room Type
    </button>
</div>

<!-- Modal për Shtim të RoomType -->
<div class="modal fade" id="addRoomTypeModal" tabindex="-1" aria-labelledby="addRoomTypeLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add Room Type</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!-- Forma për shtim -->
                <form method="post" action="/RoomType/CreateRoomType">
                    @Html.AntiForgeryToken()
                    <div class="mb-3">
                        <label class="form-label" for="Emer">Name</label>
                        <input class="form-control" type="text" id="Emer" name="Emer" />
                        <span class="text-danger field-validation-valid" data-valmsg-for="Emer" data-valmsg-replace="true"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="Siperfaqe">Area</label>
                        <input class="form-control" type="text" id="Siperfaqe" name="Siperfaqe" />
                        <span class="text-danger field-validation-valid" data-valmsg-for="Siperfaqe" data-valmsg-replace="true"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="Kapacitet">Capacity</label>
                        <input class="form-control" type="number" id="Kapacitet" name="Kapacitet" />
                        <span class="text-danger field-validation-valid" data-valmsg-for="Kapacitet" data-valmsg-replace="true"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="Pershkrim">Description</label>
                        <textarea class="form-control" id="Pershkrim" name="Pershkrim"></textarea>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary">Submit</button>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@foreach (var roomType in Model.RoomTypes)
{
    <div class="modal fade" id="editRoomTypeModal-@roomType.Id" tabindex="-1" aria-labelledby="editRoomTypeLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Edit Room Type</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form method="post" action="/RoomType/EditRoomType">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="Id" value="@roomType.Id" />
                        <div class="mb-3">
                            <label class="form-label" for="Emer">Name</label>
                            <input class="form-control" type="text" id="Emer" name="Emer" value="@roomType.Emer" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="Siperfaqe">Area</label>
                            <input class="form-control" type="text" id="Siperfaqe" name="Siperfaqe" value="@roomType.Siperfaqe" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="Kapacitet">Capacity</label>
                            <input class="form-control" type="number" id="Kapacitet" name="Kapacitet" value="@roomType.Kapacitet" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="Pershkrim">Description</label>
                            <textarea class="form-control" id="Pershkrim" name="Pershkrim">@roomType.Pershkrim</textarea>
                        </div>
                        <div class="modal-footer">
                            <button type="submit" class="btn btn-primary">Save Changes</button>
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
}

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Area</th>
            <th>Capacity</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var roomType in Model.RoomTypes)
        {
            <tr>
                <td>@roomType.Id</td>
                <td>@roomType.Emer</td>
                <td>@roomType.Siperfaqe</td>
                <td>@roomType.Kapacitet</td>
                <td>@roomType.Pershkrim</td>
                <td>
                    <button type="button" class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#editRoomTypeModal-@roomType.Id">Edit</button>
                    <form method="post" asp-action="DeleteRoomType" asp-controller="RoomType" style="display:inline;">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@roomType.Id" />
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
